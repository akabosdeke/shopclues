<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.akarshan.clubfactory.MainActivity"
    android:background="@drawable/e">

    <ImageView
        android:id="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="110dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/logoo"
        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/slogan"
        android:layout_alignParentTop="true"
        android:textSize="21sp"
        android:textStyle="bold|italic"
        android:layout_marginTop="120dp"
        android:text="Find,Discover,choose and Buy anything online"
        android:textAlignment="center"
        android:textColor="@color/endblue"
        android:layout_marginBottom="120dp"
        android:layout_alignRight="@+id/logo"
        android:layout_alignEnd="@+id/logo"
        android:layout_alignLeft="@+id/logo"
        android:layout_alignStart="@+id/logo" />
    <Button android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button"
        android:text="Already have an  Account?Login"
        android:textColor="@color/white"
        android:textStyle="bold|italic"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="20dp"
        />
    <Button android:id="@+id/Join_now_button"
        android:layout_above="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Join now"
        android:layout_alignParentBottom="true"
        android:background="@drawable/edit_text"
        android:textColor="@color/white"
        android:textStyle="bold|italic"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="20dp"
        />

</RelativeLayout>
